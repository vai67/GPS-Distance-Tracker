<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPS Distance Tracker"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Distance -->
                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distance: 0.00 km"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp" />

                <!-- Speed -->
                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Speed: 0.0 km/h"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_marginBottom="12dp" />

                <!-- Elapsed Time -->
                <TextView
                    android:id="@+id/tvElapsedTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time: 00:00:00"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_marginBottom="12dp" />

                <!-- Data Points -->
                <TextView
                    android:id="@+id/tvDataPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Points: 0"
                    android:textSize="18sp"
                    android:textColor="#616161" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Location Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Location"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvCurrentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location: Waiting for GPS..."
                    android:textSize="14sp"
                    android:textColor="#424242" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnStartStop"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Start Tracking"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Reset"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#F44336" />

        </LinearLayout>

        <!-- Info Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Features:\n• Real-time GPS tracking\n• Sub-second update intervals\n• Accurate distance calculations\n• 1,000+ data points per session\n• Speed monitoring"
            android:textSize="14sp"
            android:textColor="#757575"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</ScrollView>